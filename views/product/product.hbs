
<!-- products section -->
<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our products
            </h2>
        </div>
        <div class="product_container">
            <div class="row">
              {{#each products}}
              <div class="col-sm-6 col-lg-4">
                    <div class="box">
                        <a href="/users/cart" class="p_cart">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        </a>
                        <div class="img-box">
                            <a href="{{this.productID}}"><img src={{this.images.[0]}} alt="{{this.name}}"></a>
                        </div>
                        <div class="detail-box">
                <span class="p_rating">
                    <a href="{{this.productID}}">
                        {{#each this.rate}}
                            <i class="fa fa-star" aria-hidden="true"></i>
                        {{/each}}
                    </a>
                </span>
                            <a href="{{this.productID}}" class="p_name">
                                {{this.name}}
                            </a>
                            <h6 class="p_price">
                  <span class="new_price">
                    {{this.price}}$
                  </span>
                  <span class="sale_off">
                    Sale off {{this.sale}}%
                  </span>
                            </h6>
                        </div>
                    </div>
                </div>
              {{/each}}
            </div>

            <div class="col pt-5">
                <ul class="pagination pagination-md justify-content-center">

                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{#each pages}}
                        <li class="page-item need_color" name="{{this.currentPage}}"><a class="page-link" href="{{this.pageLink}}">{{this.currentPage}}</a></li>
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
                <div id="getCurPage" name = {{currentPage}}></div>
            </div>
        </div>
    </div>
</section>
<script src="/js/productPagination.js"></script>
<!-- end product section -->
