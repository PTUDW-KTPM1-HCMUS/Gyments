<div class="container clearfix">
    <div class="custom-title">Registration Form</div>
    <p style="padding-bottom: 20px">If you already have an account with us, please login at the login page.</p>
    <div class="custom-small-title">Your personal detail</div>
    <form style="padding-top: 20px">
        <div class="form-row">
            <div class="form-group col-md-6">
                <span style="color: #cc0000;">*</span>
                <label for="firstname">First Name</label>
                <input type="text" class="form-control" placeholder="Input your first name" required>
            </div>
            <div class="form-group col-md-6">
                <span style="color: #cc0000;">*</span>
                <label for="lastname">Last Name</label>
                <input type="text" class="form-control" placeholder="Input your last name" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <span style="color: #cc0000;">*</span>
                <label for="email">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@</div>
                    </div>
                    <input type="text" class="form-control"  placeholder="Input your email">
                </div>
            </div>
            <div class="form-group col-md-4">
                <span style="color: #cc0000;">*</span>
                <label for="telephone">Phone Number</label>
                <input type="text" class="form-control" placeholder="Input your phone number" required>
            </div>
            <div class="form-group col-md-2">
                <span style="color: #cc0000;">*</span>
                <label for="inputGender">Gender</label>
                <select class="form-control">
                    <option selected>Choose...</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Others</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <span style="color: #cc0000;">*</span>
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control"  placeholder="227 Nguyen Van Cu">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <span style="color: #cc0000;">*</span>
                <label for="inputCity">City</label>
                <input type="text" class="form-control" placeholder="Ho Chi Minh">
            </div>
            <div class="form-group col-md-4">
                <span style="color: #cc0000;">*</span>
                <label for="inputDistrict">District</label>
                <input type="text" class="form-control" placeholder="District 5" required>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" placeholder="70000">
            </div>
        </div>
    </form>
<!--    field 2-->
    <div class="custom-small-title">Your password</div>
    <form style="padding-top: 20px">
        <div class="form-group">
            <span style="color: #cc0000;">*</span>
            <label for="inputPassword">Password</label>
            <input type="text" class="form-control"  placeholder="Input your password">
        </div>
        <div class="form-group">
            <span style="color: #cc0000;">*</span>
            <label for="inputPassword">Confirm Password</label>
            <input type="text" class="form-control"  placeholder="Input your password again">
        </div>
    </form>

    <div class="form-group float-right">
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" for="gridCheck">
                I have read and agree to the <a href="#">Privacy Policy</a>
            </label>
        </div>
        <div class="pt-4">
            <button type="submit" class="custom-btn btn btn-primary float-right">Submit</button>
        </div>
    </div>
</div>
</div>