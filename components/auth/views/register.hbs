<div class="container">
    <div class="custom-title">Registration Form</div>
        <form action ="/login/register" method="POST">
            <p style="padding-bottom: 20px">If you already have an account with us, please login at the login page.</p>
            {{#if username_existed}}
                <!--                    <h4 style="color:red">Username has existed</h4>-->
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Username has existed!!!</strong>
                    <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
            {{#if email_existed}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Email has existed!!!</strong>
                    <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
            {{#if wrongconfirm}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Two passwords don't match!!!</strong>
                    <button type="button" class="close" onclick="this.parentElement.style.display='none'">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}
            <div class="custom-small-title">Your account information</div>
            <div style="padding-top: 20px">
                <div class="form-group">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control"  placeholder="Input your username" name="username">
                </div>
                <div class="form-group">
                    <span style="color: #cc0000;">*</span>
                    <label for="email">Email</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input type="text" class="form-control"  placeholder="Input your email"name="email">
                    </div>

                </div>
                <div class="form-group">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputPassword">Password</label>
                    <input type="password" class="form-control"  placeholder="Input your password" name="password">
                </div>
                <div class="form-group">
                    <span style="color: #cc0000;">*</span>
                    <label for="inputPassword">Confirm Password</label>
                    <input type="password" class="form-control"  placeholder="Input your password again" name="confirmpass">
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label" for="gridCheck">
                            I have read and agree to the <a href="#">Privacy Policy</a>
                        </label>
                    </div>
                    <div class="pt-4">
                        <button type="submit" class="custom-btn btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>