<section class = "cart_section layout_padding" >
    <div class ="container" id="cart-container">
        <div class="heading_container heading_center">
            <h2>
                Shopping Cart
            </h2>
        </div>
        <div class ="cart-table my-5">
            <table width=100%>
                <thead>
                    <tr>
                        <td>Remove</td>
                        <td>Image</td>
                        <td>Products</td>
                        <td>Price</td>  
                        <td>Quantity</td>
                        <td>Total</td>
                    </tr>
                </thead>
                <tbody class = "product-container">
                    {{#if user}}
                    {{#each cart.products}}
                    <tr>
                        <td><a href ="#" ><i class = "fa fa-trash"></i></a></td>
                        <td><img src = {{this.images.[0]}} alt=""></td>
                        <td><h5>{{this.name}}</h5></td>
                        <td><h5>${{this.price}}</h5></td>
                        <td><input type="number" class = "w-25 p1-1" value = "{{this.inCart}}"></td>
                        <td><h5>${{this.totalPrice}}</h5></td>
                    </tr>
                    {{/each}}

                    {{else}}
                    {{/if}}
                    
                </tbody>
            </table>
        </div>
        
    <div class ="container" id = "cart-bottom"> 
        <div class ="row">
            <div class = "coupon col-lg-6 col-md-6 col-12 mb-4">
                <div class = "cart-bottom-content">
                    <h5>COUPON</h5>
                    <div>
                        <p>Enter your coupon</p>
                        <input type = "text" placeholder="Coupon Code">
                        <button class = "cart-button apply" >APPLY COUPON</button>
                    </div>
                </div>
            </div>
            <div class = "total col-lg-6 col-md-6 col-12 mb-4">
                <div class = "cart-bottom-content">
                    <h5>CART TOTAL</h5>
                    <div>
                        <div class="d-flex justify-content-between">
                            <h6>Subtotal</h6>
                            <p>$350</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6>Shipping</h6>
                            <p>$30</p>
                        </div>
                        <hr class="second-hr"> 
                        <div class="d-flex justify-content-between">
                            <h6>Total</h6>
                            <p>$380</p>
                        </div>
                        <button class = "cart-button checkout ml-auto">CHECK OUT</button>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    </div>
</section>