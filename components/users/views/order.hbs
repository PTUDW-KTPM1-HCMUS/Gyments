<link rel="stylesheet" href="/css/owl.carousel.min.css">

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="/css/bootstrap.min.css">

<!-- Style -->
<link rel="stylesheet" href="/css/style2.css">
<!-- products section -->
<section class="product_section layout_padding">
    <div class="container-fluid">
        <div class="heading_container heading_center">
            <h2>
                Orders
            </h2>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    <form action="/user/order" method="get">
                        <div class="head">Status Filter</div>
                        <ul class="main-categories">
                            <li class="common-filter">
                                <ul>
                                    <li class="filter-list"><input class="pixel-radio" type="radio" id="Status" name="Status" value="Delivery"><label for="Status">Delivery</label></li>
                                    <li class="filter-list"><input class="pixel-radio" type="radio" id="Status" name="Status" value="Success"><label for="Status">Success</label></li>
                                    <li class="filter-list"><input class="pixel-radio" type="radio" id="Status" name="Status" value="Fail"><label for="Status">Fail</label></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="filter-btn">
                            <button type="submit">Filter</button>
                        </div>
                    </form>

                </div>
            </div>

            <div class="col-xl-9 col-lg-8 col-md-7">
                <div class="product_container">
                    <div class="content">
                        <div class="container">
                            <div class="table-responsive">
                                <table class="table custom-table">
                                    <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Products</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Cost</th>
                                        <th scope="col">Detail</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each orders}}
                                        <tr>
                                            <td>
                                                {{this.number}}
                                            </td>
                                            <td style="overflow-y: scroll">
                                                <div style="max-height: 50px">
                                                    {{#each this.products}}
                                                        <img src={{this.images.[0]}} alt="{{this.name}}" class="img-fluid" style="height: 30px; width: 30px; border-radius: 50%">
                                                        {{this.name}}<br>
                                                    {{/each}}
                                                </div>

                                            </td>
                                            <td>{{this.status}}</td>
                                            <td>
                                                {{this.totalCost}}
                                                (ship: {{this.shipCost}})
                                            </td>
                                            <td>
                                                <a href="/user/order/{{this._id}}">More</a>
                                            </td>
                                        </tr>

                                    {{/each}}

                                    </tbody>
                                </table>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col pt-5">
            <ul class="pagination pagination-md justify-content-center">


                {{#if previous}}
                    <li class="page-item">
                        <a class="page-link" href="/user/order?page={{previous}}{{#if filter}}&Status={{filter}}{{/if}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {{/if}}
                {{#each pages}}
                    <li class="page-item need_color" ><a class="page-link" href="/user/order?page={{this.number}}{{#if this.filter}}&Status={{this.filter}}{{/if}}">{{this.number}}</a></li>

                {{/each}}
                {{#if next}}
                    <li class="page-item">
                        <a class="page-link"  href="/user/order?page={{next}}{{#if filter}}&Status={{filter}}{{/if}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                        </a>
                    </li>
                {{/if}}

            </ul>
            <div id="getCurPage" name = {{currentPage}}></div>
        </div>

    </div>
</section>
<script src="/js/pagination.js"></script>
<!-- end product section -->



<script src="/js/jquery-3.3.1.min.js"></script>
