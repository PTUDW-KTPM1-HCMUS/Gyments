
<!-- Product detail css -->
<link rel="stylesheet" href="/css/product_detail/product_detail.css">
<!-- Owl carousel css -->
<link rel="stylesheet" href="/css/product_detail/owl.carousel.min.css">
<!-- Custom css -->
<link rel="stylesheet" href="/css/product_detail/default.css">
<!-- Product Thumbnail Start  -->
<div class="main-product-thumbnail p-t-100 ptb-sm-60">
    <div class="container">
        <div class="thumb-bg">
            <div class="row">
                <!-- Main Thumbnail Image Start -->
                <div class="col-lg-5 mb-all-40">
                    <div class="slideshow-container">
                        <!-- Full-width images with number and caption text -->
                        {{#each product.images}}
                            <div class="mySlides fade_1">
                                <img src="{{this}}" style="width:100%">
                            </div>
                        {{/each}}
                        <!-- Next and previous buttons -->
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                    </div>
                    <br>
                    <!-- The dots/circles -->
                    <div style="text-align:center">
                        {{#each product.images}}
                            <span class="dot" onclick="currentSlide(1)"></span>
                        {{/each}}
                    </div>
                </div>
                <!-- Main Thumbnail Image End -->
                <!-- Thumbnail Description Start -->
                <div class="col-lg-7">
                    <div class="thubnail-desc fix">
                        <h3 class="product-header">{{product.name}}</h3>
                        <div class="rating-summary fix mtb-10">
                            <div class="rating">
                                {{#each product.rate}}
                                    <i class="fa fa-star"></i>
                                {{/each}}
                            </div>
                        </div>
                        <div class="pro-price mtb-30">
                            <p class="d-flex align-items-center"><span class="prev-price">{{product.price}}$</span><span class="price">{{newPrice}}$</span><span class="saving-price">Save {{product.sale}}%</span></p>
                        </div>
                        <p class="mb-20 pro-desc-details">{{product.overview}}</p>
                        <div class="box-quantity d-flex hot-product2">
                            <form action="#">
                                <input class="quantity mr-15" type="number" min="1" value="1">
                            </form>
                            <div class="pro-actions">
                                <div class="actions-primary">
                                    <a href="#" class="p_cart" title="" data-original-title="Add to Cart"> + Add To Cart
                                    <div  class ="detail-product-id" hidden name ="/product/{{product._id}}"></div>
                                    </a>
                                </div>
                                <div class="actions-secondary">
                                    <a href="#" title="" data-original-title="WishList"><i class="fa fa-heart"></i> <span>Add to WishList</span></a>
                                </div>
                            </div>
                        </div>
                        <div class="pro-ref mt-20">
                            <p><span class="in-stock"><i class="ion-checkmark-round"></i> IN STOCK</span></p>
                        </div>
                        <div class="socila-sharing mt-25">
                            <ul class="d-flex">
                                <li>Share</li>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus-official" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Thumbnail Description End -->
            </div>
            <!-- Row End -->
        </div>
    </div>
    <!-- Container End -->
</div>
<!-- Product Thumbnail End -->

<!-- Product Thumbnail Description Start -->
<div class="thumnail-desc pb-100 pb-sm-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="main-thumb-desc nav tabs-area" role="tablist">
                    <li><a class="active" data-toggle="tab" href="#dtail">Product Details</a></li>
                    <li><a data-toggle="tab" href="#review">Reviews</a></li>
                </ul>
                <!-- Product Thumbnail Tab Content Start -->
                <div class="tab-content thumb-content border-default">
                    <div id="dtail" class="tab-pane fade show active">
                        <ul style="  list-style-type: circle;">
                            {{#each product.description}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div id="review" class="tab-pane fade">
                        <!-- Reviews Start -->
                        <div class="review border-default universal-padding">
                            <div class="group-title">
                                <h2>customer review</h2>
                            </div>
                            <!-- start review item -->
                            <div id="comment_list">
                                {{#each comments}}
                                    <div class="review_item">
                                        <div class="media">
                                            <div class="d-flex">
                                                <img class="media-img" src="{{this.userAvatar}}" alt="user_image">
                                            </div>
                                            <div class="media-body">
                                                <h4>{{this.nickname}}</h4>
                                                <h5>{{this.createAt}}</h5>
                                            </div>
                                        </div>
                                        <p>{{this.content}}</p>
                                    </div>
                                {{/each}}
                            </div>
                        <!-- review item end here-->
                        </div>
                        <!-- Reviews End -->

                        <!-- Reviews Start -->
                        <div class="review border-default universal-padding mt-30">
                            <h2 class="review-title mb-30">You're reviewing: <span>{{product.name}}</span></h2>
                            <!-- Reviews Field Start -->
                            <div class="review-field mt-40">
                                <form autocomplete="off" action="{{product._id}}/comments" method="post" id="comment_form">
                                    {{#unless user}}
                                        <div class="form-group">
                                            <span style="color: #cc0000;">*</span>
                                            <label class="req" for="sure-name">Nickname</label>
                                            <input type="text" class="form-control" id="nickname" required name="nickname">
                                        </div>
                                    {{/unless}}
                                    <input type="hidden" value="{{product._id}}" id="product_id">
                                    <div class="form-group">
                                        <span style="color: #cc0000;">*</span>
                                        <label class="req" for="comments">Review</label>
                                        <textarea class="form-control" rows="5" id="comment_content" required name="content"></textarea>
                                    </div>
                                    <button type="submit" class="customer-btn">Submit Review</button>
                                </form>
                            </div>
                            <!-- Reviews Field Start -->
                        </div>
                        <!-- Reviews End -->
                    </div>
                </div>
                <!-- Product Thumbnail Tab Content End -->
            </div>
        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</div>
<!-- Product Thumbnail Description End -->


<!-- Related Products Start Here -->
<div class="hot-deal-products off-white-bg pt-100 pb-90 pt-sm-60 pb-sm-50">
    <div class="container">
        <!-- Product Title Start -->
        <div class="post-title pb-30">
            <h2>Related Products</h2>
        </div>
        <!-- Product Title End -->
        <!-- Hot Deal Product Activation Start -->
        <div class="hot-deal-active owl-carousel">
            <!-- Single Product Start -->
            {{#each relatedProducts}}
                <div class="single-product">
                    <!-- Product Image Start -->
                    <div class="pro-img">
                        <a href="{{this.productID}}">
                            <img class="primary-img" src="{{this.images.[0]}}" alt="single-product">
                            <img class="secondary-img" src="{{this.images.[1]}}" alt="single-product">
                        </a>
                    </div>
                    <!-- Product Image End -->
                    <!-- Product Content Start -->
                    <div class="pro-content">
                        <div class="pro-info">
                            <h4><a href="{{this.productID}}">{{this.name}}</a></h4>
                            <p>
                                <span class="price">{{this.price}}$</span>
                                <span class="prev-price">{{this.price}}$</span>
                            </p>
                            <div class="label-product l_sale">
                                {{this.sale}}
                                <span class="symbol-percent">%</span>
                            </div>
                        </div>
                        <div class="pro-actions">
                            <div class="actions-primary">
                                <a href="#" class ="p_cart" title="Add to Cart"> + Add To Cart
                                    <div  class ="detail-product-id" hidden name ={{this.productID}}></div>
                                </a>

                            </div>
                            <div class="actions-secondary">
                                <a href="#" title="WishList"><i class="fa fa-heart"></i> <span>Add to WishList</span></a>
                            </div>
                        </div>
                    </div>
                    <!-- Product Content End -->
                </div>
            {{/each}}
            </div>
            <!-- Single Product End -->
        </div>
        <!-- Hot Deal Product Active End -->
    </div>
    <!-- Container End -->
</div>
<!-- Related Products End Here -->
<script src="/js/product_detail/main.js"></script>
<script id="comment_template" type="text/x-handlebars">
    <div class="review_item">
        <div class="media">
            <div class="d-flex">
                <img class="media-img" src="\{{this.userAvatar}}" alt="user_image">
            </div>
            <div class="media-body">
                <h4>\{{this.nickname}}</h4>
                <h5>\{{this.createAt}}</h5>
            </div>
        </div>
        <p>\{{this.content}}</p>
    </div>
</script>